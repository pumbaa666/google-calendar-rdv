<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>zip</id>
	
	<!-- https://stackoverflow.com/questions/11748849/how-to-configure-mavenassembly-root-path-in-the-jar -->
	<includeBaseDirectory>false</includeBaseDirectory>

	<formats>
		<format>zip</format>
	</formats>

	<fileSets>
		<fileSet>
			<directory>${project.basedir}/conf</directory>
		</fileSet>

		<fileSet>
			<directory>${project.basedir}/logs</directory>
		</fileSet>
	</fileSets>

	<files>
		<file>
			<source>${project.build.directory}/${project.artifactId}-standalone.jar</source>
			<outputDirectory>/</outputDirectory>
		</file>

		<file>
			<source>rendez-vous-launcher.bat</source>
			<outputDirectory>/</outputDirectory>
		</file>
	</files>
</assembly>